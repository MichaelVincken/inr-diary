<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:orientation="horizontal"
			  android:layout_width="fill_parent"
			  android:layout_height="fill_parent"
			  android:weightSum="1.0">

	<LinearLayout
			android:id="@+id/inr_item_date"
			android:layout_width="65dp"
			android:layout_height="fill_parent"
			android:orientation="vertical"
			style="@style/list_item_date">

		<TextView
				android:id="@+id/inr_item_date_day_of_week"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				style="@style/item_date_small"/>

		<TextView
				android:id="@+id/inr_item_date_day"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				style="@style/item_date_large"/>

		<TextView
				android:id="@+id/inr_item_date_month"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				style="@style/item_date_small"/>

	</LinearLayout>

	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="horizontal"
			android:gravity="center">

		<TextView
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:text="@string/inr_value"
				android:textSize="@dimen/m"
				android:textColor="@color/grey"
				android:paddingRight="5dp"
				android:paddingLeft="5dp"
				android:gravity="center_vertical"/>

		<TextView
				android:id="@+id/inr_item_value"
				android:layout_width="wrap_content"
				android:layout_height="fill_parent"
				android:width="30dp"
				android:textSize="@dimen/m"
				android:textColor="@color/dark_grey"
				android:gravity="center_vertical"/>

	</LinearLayout>
</LinearLayout>