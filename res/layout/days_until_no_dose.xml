<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:id="@+id/days_until_no_dose_layout"
			  android:layout_width="match_parent"
			  android:layout_height="match_parent"
			  android:orientation="vertical"
			  android:gravity="center"
			  android:background="@drawable/background_turquoise">

	<TextView
			android:id="@+id/days_until_no_dose_textview"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@color/white"
			android:textSize="@dimen/xxl"
			android:gravity="center"/>

	<TextView
			android:text="@string/days_until_no_dose"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textColor="@color/white"
			android:textSize="@dimen/m"
			android:padding="5dp"
			android:gravity="center"/>

</LinearLayout>