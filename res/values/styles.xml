<resources xmlns:android="http://schemas.android.com/apk/res/android">

	<style name="list_item_date">
		<item name="android:background">@drawable/background_light_grey</item>
		<item name="android:padding">5dp</item>
		<item name="android:gravity">center</item>
	</style>

	<style name="item_date_small">
		<item name="android:textColor">@color/dark_grey</item>
		<item name="android:textSize">10dp</item>
		<item name="android:gravity">center</item>
	</style>

	<style name="item_date_large">
		<item name="android:textColor">@color/dark_grey</item>
		<item name="android:textSize">20dp</item>
		<item name="android:gravity">center</item>
	</style>

	<style name="list_item_dose_label">
		<item name="android:textSize">15dp</item>
		<item name="android:textColor">@color/grey</item>
		<item name="android:paddingRight">5dp</item>
		<item name="android:gravity">center</item>
	</style>

	<style name="list_item_dose">
		<item name="android:textSize">15dp</item>
		<item name="android:textColor">@color/dark_grey</item>
		<item name="android:gravity">center_vertical</item>
	</style>

	<style name="todays_dose_title">
		<item name="android:textSize">20dp</item>
		<item name="android:textColor">@color/white</item>
		<item name="android:gravity">center</item>
	</style>

	<style name="todays_dose_value">
		<item name="android:textSize">75dp</item>
		<item name="android:textColor">@color/white</item>
		<item name="android:gravity">center</item>
	</style>

	<style name="top_left_view_with_value">
		<item name="android:padding">20dp</item>
	</style>

	<style name="todays_dose_context">
		<item name="android:textSize">15dp</item>
		<item name="android:textColor">@color/white</item>
		<item name="android:gravity">center</item>
	</style>

	<style name="top_left_view_without_value">
		<item name="android:padding">20dp</item>
		<item name="android:background">@drawable/background_red</item>
	</style>

	<style name="todays_dose_no_value">
		<item name="android:textSize">25dp</item>
		<item name="android:textColor">@color/white</item>
		<item name="android:gravity">center</item>
	</style>

	<style name="list_item_not_confirmed">
		<item name="android:textColor">@color/red</item>
	</style>

	<style name="list_item_inr_label">
		<item name="android:textSize">15dp</item>
		<item name="android:textColor">@color/grey</item>
		<item name="android:paddingRight">5dp</item>
		<item name="android:paddingLeft">15dp</item>
		<item name="android:gravity">center_vertical</item>
	</style>

	<style name="list_item_inr_value">
		<item name="android:textSize">15dp</item>
		<item name="android:textColor">@color/dark_grey</item>
		<item name="android:gravity">center_vertical</item>
	</style>
</resources>