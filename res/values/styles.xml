<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="list_item_date">
		<item name="android:background">@drawable/background_light_grey</item>
		<item name="android:textSize">12sp</item>
		<item name="android:textColor">@color/dark_grey</item>
		<item name="android:padding">10dp</item>
		<item name="android:gravity">center</item>
    </style>

	<style name="list_item_dose">
		<item name="android:textSize">20sp</item>
		<item name="android:textColor">@color/darker_grey</item>
		<item name="android:padding">15dp</item>
		<item name="android:gravity">center</item>
	</style>

	<style name="todays_dose_title">
		<item name="android:textSize">20sp</item>
		<item name="android:textColor">@color/white</item>
		<item name="android:gravity">center</item>
	</style>

	<style name="todays_dose_value">
		<item name="android:textSize">80sp</item>
		<item name="android:textColor">@color/white</item>
		<item name="android:gravity">center</item>
	</style>

	<style name="top_left_view_with_value">
		<item name="android:padding">20dp</item>
	</style>

	<style name="todays_dose_context">
		<item name="android:textSize">15sp</item>
		<item name="android:textColor">@color/white</item>
		<item name="android:gravity">center</item>
	</style>

	<style name="top_left_view_without_value">
		<item name="android:padding">20dp</item>
		<item name="android:background">@drawable/background_red</item>
	</style>

	<style name="todays_dose_no_value">
		<item name="android:textSize">25sp</item>
		<item name="android:textColor">@color/white</item>
		<item name="android:gravity">center</item>
	</style>
</resources>