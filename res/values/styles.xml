<resources xmlns:android="http://schemas.android.com/apk/res/android">

	<style name="list_item_date">
		<item name="android:background">@drawable/background_light_grey</item>
		<item name="android:padding">5dp</item>
		<item name="android:gravity">center</item>
	</style>

	<style name="item_date_small">
		<item name="android:textColor">@color/dark_grey</item>
		<item name="android:textSize">@dimen/s</item>
		<item name="android:gravity">center</item>
	</style>

	<style name="item_date_large">
		<item name="android:textColor">@color/dark_grey</item>
		<item name="android:textSize">@dimen/l</item>
		<item name="android:gravity">center</item>
	</style>

	<style name="list_item_dose_label">
		<item name="android:textSize">@dimen/m</item>
		<item name="android:textColor">@color/grey</item>
		<item name="android:paddingRight">5dp</item>
		<item name="android:gravity">center</item>
	</style>

	<style name="list_item_dose">
		<item name="android:textSize">@dimen/m</item>
		<item name="android:textColor">@color/dark_grey</item>
		<item name="android:gravity">center_vertical</item>
	</style>

	<style name="todays_dose_context">
		<item name="android:textSize">@dimen/m</item>
		<item name="android:textColor">@color/white_transparent</item>
		<item name="android:gravity">center</item>
	</style>
</resources>